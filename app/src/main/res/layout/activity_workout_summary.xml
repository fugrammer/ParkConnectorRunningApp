<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a2006_3.parkconnectorrunningapp.RoutePlanning.WorkoutSummary">

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distance"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="171dp" />

    <TextView
        android:id="@+id/timetaken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time taken"
        tools:layout_editor_absoluteY="123dp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/caloriesburn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories burned"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="222dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:text="Workout Summary"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.075" />

    <Button
        android:id="@+id/finishWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FINISH"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="490dp" />

    <TextView
        android:id="@+id/summarytimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123mins"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="123dp" />

    <TextView
        android:id="@+id/summarydistTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10km"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="171dp" />

    <TextView
        android:id="@+id/summarycaloriesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100cal"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="222dp" />


</android.support.constraint.ConstraintLayout>
